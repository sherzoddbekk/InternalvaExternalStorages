<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Internal Storage(text)"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:gravity="center"/>
    <Button
        android:id="@+id/save_int"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="save internal "
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"/>

    <Button
        android:id="@+id/read_int"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="read internal "
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"/>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Internal Storage(text)"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:gravity="center"/>

    <Button
        android:id="@+id/save_ext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="save internal "
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"/>
    <Button
        android:id="@+id/read_ext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="save external "
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="save  photo in internal or external(text)"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:gravity="center"/>

    <Button
        android:id="@+id/take_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" take photo "
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"/>

</LinearLayout>